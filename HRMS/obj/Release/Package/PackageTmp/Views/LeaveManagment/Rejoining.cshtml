        function EmployeeFormData(ddl) {
            debugger;

            var employeeId = $(ddl).val();

            if (employeeId != null) {

                $.ajax({

                    type: "POST",

                    data: { employeeId: employeeId },

                    url: "/LeaveManagment/RejoiningData",

