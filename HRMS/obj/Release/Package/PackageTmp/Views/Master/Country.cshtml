    <script>

        $(document).ready(function () {
            $("#AddTask").show();
            $(".updateTask").hide();
            $("#ChngName").show();
            $(".txtUpdate").hide();
            LoadingCountryDetails();
            GetRegionDDL();
            LoadingCode();

        });

        $('#DDLRegion').select2({
            selectOnClose: true
        });
        function LoadingCode() {

            $.ajax({
                type: "GET",
                contentType: "application/json; charset=utf-8",
                url: "/Master/AutoCodeGenrateCountry",
                success: function (data) {
                    $("#txtCode").val(data);
                },
                error: function (error) {

                },
                cache: false
            });
        }

        function LoadingCountryDetails() {

            $.ajax({
                type: "GET",
                contentType: "application/json; charset=utf-8",
                url: "/Master/GetCountryList",
                success: onSuccessCountryDetails,
                error: function (error) {

                },
                cache: false
            });
        }
        function onSuccessCountryDetails(data) {
            $("#AllCountryList").empty();
            $("#AllCountryList").append("<table id='AllCountrydatadetailTable' class='table u-table--v3 g-color-black'>");
            $("#AllCountrydatadetailTable").empty();
            $("#AllCountrydatadetailTable").append("<thead>" +
                "<tr class='ob_gC'>" +
            /*"<th>ID</th>" +*/
                "<th>Code</th>" +
                "<th>Name</th>" +
                "<th>Region Name</th>" +
                "<th class='last-td' style='width:35px'>Action</th> " +
                "</tr>" +
                "</thead>" +
                "<tbody id='values1'>");
            if (data.length > 0) {
                var val = '';

                for (var i = 0; i < data.length; i++) {
                    if (data[i].Active == true) {
                        val = "<tr>" +
                        /* "<td class='first-td'>" + data[i].Id + "</td>" +*/
                            "<td>" + data[i].Code + "</td>" +
                            "<td>" + data[i].Name + "</td>" +
                            "<td>" + data[i].RegionName + "</td>" +
                            "<td class='last-td'><a class='btn btn-default btn-sm' title='Edit' style='cursor: pointer;' onclick='LoadingEditData(" + data[i].Id + ")' data-toggle='modal' data-target='#CountryModal'><i class='fa fas fa-pencil'></i></a><a class='btn  btn-sm' title='Delete' style='cursor: pointer;' onclick = Delete(" + data[i].Id + ") > <i class='fa fa-trash'></i></a > "
                            // "<td class='last-td'><label class='form-check-inline u-check g-mr-20 mx-0 mb-0'> <input class='g-hidden-xs-up g-pos-abs g-top-0 g-right-0' id='btnEdit' onclick='LoadingEditData(" + data.data[i].pK_MetaDataID + ")' name = 'radGroup1_1' data-toggle='modal' data-target='#myModal'><i class='fa fa-pencil'></i></label ></td>" +
                            + "</tr></tbody>";


                        $('#values1').append(val);
                    }
                }
            }


            $('#AllCountrydatadetailTable').dataTable({
                "bProcessing": true,
                "bPaginate": true,
                "sPaginationType": "full_numbers",
                "responsive": true,
                "ordering": true
            });

        }

        function LoadingEditData(ID) {
            Mode = "Update";
            $("#AddTask").hide();
            $(".updateTask").hide();
            $(".txtUpdate").hide();
            $("#ChngName").hide();
            $("#ChangeTitle").append("<h4 class='modal-title txtUpdate' style='color: white' >Update Country</h4>");
            $("#divAddTask").append(" <button type='button' class='btn btn-inverse-primary  my-auto ml-auto updateTask' id='updateTask' onclick='UpdateMetaData(" + ID + ");'>Update</button>");

            $.ajax({
                type: "GET",
                contentType: "application/json; charset=utf-8",
                url: "/Master/EditCountry/" + ID,
                success: onSuccessMetaDetaDetails,
                
                error: function (error) {
                    alert("error", error);
                },
                cache: false
                
            });

        }

        function onSuccessMetaDetaDetails(data) {

            $('#txtCountryName').val(data.Name);
            $("#txtCode").val(data.CountryCode);
            $("#txtPhCode").val(data.CountryPhoneCode);
            $('#DDLRegion').val(data.RegionId).select2();
            $("#Activechk").prop('checked', data.Active);
        }

        function SaveData() {
            var CountryName = $("#txtCountryName").val();
            var Code = $("#txtCode").val();
            var PhoneCode = $("#txtPhCode").val();
            var RegionId = $('#DDLRegion').val();
            var Active = $('#Activechk').is(":checked");
            if (CountryName == null || CountryName == 'string' || !CountryName.trim()) {

                Swal.fire({
                    icon: 'warning',
                    dangerMode: true,
                    text: 'Please Fill Country Name!'
                });
                return false;
            }
            if (RegionId == null || RegionId == -1 || RegionId == "") {
                Swal.fire({
                    icon: 'warning',
                    text: 'Please Select Region!'
                });
                return false;
            }

            var Data = JSON.stringify(
                {
                    Name: CountryName,
                    CountryCode: Code,
                    CountryPhoneCode: PhoneCode,
                    RegionId: RegionId,
                    Active: Active
                });
            $.ajax({
                type: "POST",
                data: Data,
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                url: "/Master/AddCountry",
                success: onSuccessAddManagement,
                error: function (error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Something went wrong to Insert new Country!',
                    });
                },
                cache: false
            });

        }

        function onSuccessAddManagement(data) {
            if (data.success == true) {
                Swal.fire({
                    icon: 'info',
                    title: 'Info',
                    text: 'Your work has been Save.',
                }).then(function () {
                    location.reload(true);
                });
                Mode = "";
                clearfields();

                LoadingCountryDetails();
            } else {
                Swal.fire({
                    icon: 'info',
                    title: 'Info',
                    text: data.message,
                }).then(function () {
                    location.reload(true);
                });
                Mode = "";
                clearfields();

                LoadingCountryDetails();
            }

        }

        function UpdateMetaData(ID) {
            Mode = "Update";
            var CountryName = $("#txtCountryName").val();
            var PhoneCode = $("#txtPhCode").val();
            var RegionId = $('#DDLRegion').val();
            var Code = $("#txtCode").val();
            var Active = $('#Activechk').is(":checked");

            var Data = JSON.stringify(
                {
                    Id: ID,
                    Name: CountryName,
                    CountryCode: Code,
                    CountryPhoneCode: PhoneCode,
                    RegionId: RegionId,
                    Active: Active

                });
            /* $("#CountryModal").modal('hide')*/
            $.ajax({
                type: "POST",
                data: Data,
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                url: "/Master/UpdateCountry",
                success: onSuccessUpdateManagement,
                error: function (error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Something went wrong to Insert new Country!',
                    });
                },
                cache: false,
            });
        }
        function onSuccessUpdateManagement(data) {
            Swal.fire({
                icon: 'info',
                title: 'Info',
                text: 'Your work has been Save.',
            }).then(function () {
                location.reload(true);
            });
            Mode = "";
            clearfields();

            LoadingCountryDetails();

        }


        function Delete(ID) {
            if (confirm('Are you sure to Delete this record ?')) {

                $.ajax({
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    url: "/Master/DeleteCountry/" + ID,
                    success: function (data) {

                        LoadingCountryDetails();

                    }

                });
            }
        }

        function GetRegionDDL() {

            $.ajax({
                type: "GET",
                contentType: "application/json; charset=utf-8",
                url: "/Master/GetRegionsList",
                success: function (data, status) {
                    if (data != "") {

                        $('#DDLRegion').empty();
                        $('#DDLRegion').append('<option value="-1" selected disabled>Select Region</option>');
                        $.each(data, function (i, tweet) {
                            $('#DDLRegion').append('<option value="' + data[i].Id + '">' + data[i].Name + '</option>');

                        });

                    }

                },
                error: function (error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Something went wrong!',
                    });
                },
                cache: false,

            });
        }

        function clearfields() {
            $(".updateTask").hide();
            $("#AddTask").show();
            $("#txtCountryName").val("");
            $("#DDLRegion").val("-1").select2();
           $("#txtCode").val("");
             $("#txtPhCode").val("");
            $("#ChngName").show();
            $(".txtUpdate").hide();
            LoadingCode();
        }

    </script>
}