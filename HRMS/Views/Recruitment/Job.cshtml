            $('#datepickerJoining').datepicker({ dateFormat: "yy-mm-dd" }).find('input').val(currentDatestart);
            $("#Activechk").prop('checked', data.Active);
        }


        function SaveData() {
            var JobTitle = $("#txtJobTitle").val();
            var NoOfposition = $("#txtNoOfposition").val();
