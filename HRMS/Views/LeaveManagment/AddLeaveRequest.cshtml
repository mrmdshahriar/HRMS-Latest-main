            var DDLLeaveType = $("#DDLLeaveType").val();
            var DateFrom = $("#DateFrom").datepicker({ dateFormat: "yy-mm-dd" }).find('input').val();
            var DateTo = $('#DateTo').datepicker({ dateFormat: "yy-mm-dd" }).find('input').val();
