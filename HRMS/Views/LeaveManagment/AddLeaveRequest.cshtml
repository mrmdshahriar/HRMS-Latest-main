            var Reason = $('#txtReasion').val();
            var EligibilityDays = $('#EligibilityDays').val();
            var PendingDays = $('#PendingDays').val();
            var CashOutDate = $('#CashOutDate').val();
            var Active = $('#Activechk').is(":checked");
            var Encashment = $('#Encashment').is(":checked");

            var Data = JSON.stringify(
