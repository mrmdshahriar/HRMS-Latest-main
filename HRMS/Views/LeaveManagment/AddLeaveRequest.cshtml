        function DateFromChange() {
            debugger;

            $("#txtDateTo").val("");
            $("#txtLeaveDays").val("");
            $("#PendingDays").val("");
        }

        function leaveTypeDDLChange(ddl) {
            debugger;

            $("#txtDateTo").val("");

            $("#txtDateFrom").val("");

            $("#Area").css("pointer-events", "all");

            $("#txtLeaveDays").val("");

            $("#PendingDays").val("");

            $("#EligibilityDays").val("");

           // var ss = $("#DDLLeaveType option:selected").text();

            var leaveType = $(ddl).find("option:selected").text();

            var employeeId = $("#DDLEmployee").val();

            if (employeeId == null) {

                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Please Select Employee First!',
                });

                $("#DDLLeaveType").val(-1);

                return false;
            }

            if (employeeId != null) {

                $.ajax({

                    type: "POST",

                    data: { employeeId: employeeId, leaveType: leaveType },

                    url: "/LeaveManagment/CheckAnnualLeavesAvailable",

                    success: function (data) {
                        debugger;

                        if (data.success == false) {

                            Swal.fire({
                                icon: 'error',
                                title: 'Oops...',
                                text: data.message,
                            });

                            $("#DDLLeaveType").val(-1);
                        }

                        if (data.success == true) {

                            //Swal.fire({
                            //    icon: 'info',
                            //    title: 'Eligibility',
                            //    text: "You Have " + data.EligibilityDays + " Eligible Days."
                            //});

                            $("#EligibilityDays").val(data.EligibilityDays);

                            if (data.Encashable.IsEncashable == true) {

                                $("#Encashment").prop("checked", true);

                            }
                            if (data.Encashable.IsEncashable == false) {

                                $("#Encashment").prop("checked", false);

                                $("#Encashment").prop("disabled", true);
                            }
                        }

                    },

                    error: function (error) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops...',
                            text: 'Something went wrong!',
                        });
                    },
                    cache: false
                });
            }
        }

        function onSuccessEditDetails(data) {

            $("#Area").css("pointer-events", "all");

            var fullDatestart = new Date(data.CreatedBy);
            var twoDigitMonthstart = (fullDatestart.getMonth() + 1) + "";
            if (twoDigitMonthstart.length == 1)
                twoDigitMonthstart = "0" + twoDigitMonthstart;
            var twoDigitDatestart = fullDatestart.getDate() + "";
            if (twoDigitDatestart.length == 1)
                twoDigitDatestart = "0" + twoDigitDatestart;

            var currentDatestart = fullDatestart.getFullYear() + "/" + twoDigitMonthstart + "/" + twoDigitDatestart;

            var fullDatestart = new Date(data.LastModifiedBy);
            var twoDigitMonthstart = (fullDatestart.getMonth() + 1) + "";
            if (twoDigitMonthstart.length == 1)
                twoDigitMonthstart = "0" + twoDigitMonthstart;
            var twoDigitDatestart = fullDatestart.getDate() + "";
            if (twoDigitDatestart.length == 1)
                twoDigitDatestart = "0" + twoDigitDatestart;

            var currentDatestart1 = fullDatestart.getFullYear() + "/" + twoDigitMonthstart + "/" + twoDigitDatestart;

            $("#DDLEmployee").val(data.Employee).select2();
            $("#DDLLeaveType").val(data.LeaveTypeId).select2();
            $("#txtLeaveDays").val(data.LeaveDays);
            $("#txtReasion").val(data.Reason);
            $("#PendingDays").val(data.PendingDays);
            $("#EligibilityDays").val(data.EligibilityDays);
            $('#DateFrom').datepicker({ dateformat: "yy-mm-dd" }).find('input').val(currentDatestart);
            $('#DateTo').datepicker({ dateformat: "yy-mm-dd" }).find('input').val(currentDatestart1);
            $("#CashOutDate").val(data.CashOutDate);
            $("#Activechk").prop('checked', data.IsActive);
        }

        $("#DateTo").bind('change keyup', function () {
            debugger;

            var date1 = $('#DateFrom').datepicker('getDate');

            var date2 = $(this).datepicker('getDate');

            if (date1 > date2) {

                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'From Date Is Greater Than To Date!',
                });

                $("#txtDateTo").val("");
                $("#txtLeaveDays").val("");
                $("#PendingDays").val("");

                return false;
            }


            var fullDatestart = new Date(date1);
            var twoDigitMonthstart = (fullDatestart.getMonth() + 1) + "";
            if (twoDigitMonthstart.length == 1)
                twoDigitMonthstart = "0" + twoDigitMonthstart;
            var twoDigitDatestart = fullDatestart.getDate() + "";
            if (twoDigitDatestart.length == 1)
                twoDigitDatestart = "0" + twoDigitDatestart;

            var currentDatestart = fullDatestart.getFullYear() + "/" + twoDigitMonthstart + "/" + twoDigitDatestart;

            var fullDatestart = new Date(date2);
            var twoDigitMonthstart = (fullDatestart.getMonth() + 1) + "";
            if (twoDigitMonthstart.length == 1)
                twoDigitMonthstart = "0" + twoDigitMonthstart;
            var twoDigitDatestart = fullDatestart.getDate() + "";
            if (twoDigitDatestart.length == 1)
                twoDigitDatestart = "0" + twoDigitDatestart;
          
            var currentDatestart1 = fullDatestart.getFullYear() + "/" + twoDigitMonthstart + "/" + twoDigitDatestart;

            var EligibilityDays = $("#EligibilityDays").val();

            if (currentDatestart == currentDatestart1) {

                var dayDiff = 1;

                if (dayDiff > parseInt(EligibilityDays)) {

                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Please Check Leave Eligibility Days!',
                    });

                    $("#txtDateTo").val("");

                    $("#txtLeaveDays").val("").attr('disabled', 'disabled');

                    $("#PendingDays").val("");

                    return false;
                }

                $("#txtLeaveDays").val(dayDiff).attr('disabled', 'disabled');

                $("#PendingDays").val(EligibilityDays - dayDiff);

            } else {

                var dayDiff = Math.ceil((date2 - date1) / (1000 * 60 * 60 * 24)) + 1;

                if (dayDiff > parseInt(EligibilityDays)) {

                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Please Check Leave Eligibility Days!',
                    });

                    $("#txtDateTo").val("");

                    $("#txtLeaveDays").val("").attr('disabled', 'disabled');

                    $("#PendingDays").val("");

                    return false;
                }

                $("#txtLeaveDays").val(dayDiff).attr('disabled', 'disabled');

                $("#PendingDays").val(EligibilityDays - dayDiff);
            }
        });

        function SaveData() {

            var DDLEmployee = $("#DDLEmployee").val();
            var DDLLeaveType = $("#DDLLeaveType").val();
            var DateFrom = $("#DateFrom").datepicker({ dateFormat: "yy-mm-dd" }).find('input').val();
            var DateTo = $('#DateTo').datepicker({ dateFormat: "yy-mm-dd" }).find('input').val();

            var LeaveDays = $('#txtLeaveDays').val();
            var CashOutDate = $('#CashOutDate').val();
           
            var Reason = $('#txtReasion').val();
            var EligibilityDays = $('#EligibilityDays').val();
            var PendingDays = $('#PendingDays').val();
            var Active = $('#Activechk').is(":checked");
            var Encashment = $('#Encashment').is(":checked");


            if (DDLEmployee == null || DDLEmployee == -1 || DDLEmployee == "") {
                Swal.fire({
                    icon: 'warning',
                    text: 'Please Select Employee!'
                });
                return false;
            }

            if (DDLLeaveType == null || DDLLeaveType == -1 || DDLLeaveType == "") {
                Swal.fire({
                    icon: 'warning',
                    text: 'Please Select Leave Type!'
                });
                return false;
            }


            if (DateFrom == null || DateFrom == 'string' || !DateFrom.trim()) {
                Swal.fire({
                    icon: 'warning',
                    text: 'Please Select  Date From!'
                });
                return false;
            }

            if (DateTo == null || DateTo == 'string' || !DateTo.trim()) {
                Swal.fire({
                    icon: 'warning',
                    text: 'Please Select  Date To!'
                });
                return false;
            }

            if (Reason == null || Reason == 'string' || !Reason.trim()) {

                Swal.fire({
                    icon: 'warning',
                    dangerMode: true,
                    text: 'Please Fill Reason!'
                });
                return false;
            }


            var Data = JSON.stringify(
                {
                    Employee: DDLEmployee,
                    LeaveTypeId: DDLLeaveType,
                    DateFrom: DateFrom,
                    DateTo: DateTo,
                    LeaveDays: LeaveDays,
                    Reason: Reason,
                    PendingDays: PendingDays,
                    EligibilityDays: EligibilityDays,
                    Encashment: Encashment,

                    CashOutDate: CashOutDate,
                    IsActive: Active
                });
            $.ajax({
                type: "POST",
                data: Data,
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                url: "/LeaveManagment/AddLeaveRequest",
                success: onSuccessAddManagement,
                error: function (error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Something went wrong!',
                    });
                },
                cache: false
            });

        }

        function onSuccessAddManagement(data) {
            debugger;

            if (data.success == false) {

                Swal.fire({
                    icon: 'info',
                    title: 'Info',
                    text: data.message,
                }).then(function () {
                    window.location.href = '/LeaveManagment/LeaveRequest';
                });
                Mode = "";
            }
            
            if (data.success == true) {

                Swal.fire({
                    icon: 'info',
                    title: 'Info',
                    text: 'Your work has been Save.',
                }).then(function () {
                    window.location.href = '/LeaveManagment/LeaveRequest';
                });
                Mode = "";
            }
        }


        function UpdateLeaveRequest(id) {

