<div class="container">
    <!-- Button trigger modal -->
    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header modal-header">
                    <div id="ChangeTitle">

                        <h4 class="modal-title" style="color:white" id="ChngName">Add Allowance</h4>
                    </div>
                    <button type="button" class="close" data-dismiss="modal">×</button>
                </div>
                <div class="modal-body">

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group g-mb-30">
                                <label class="g-mb-10 md-name" for="inputGroup-1_1">Allowance Name</label> <span style="color:red">*</span>
                                <div class="g-pos-rel">
                                    <input id="txtAllowanceName" class="form-control form-control-md g-brd-gray-light-v7 g-brd-gray-light-v3--focus g-rounded-4 g-px-14 g-py-10 md-name-input" type="text" placeholder="Allowance Name" required>
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-12">
                            @*<div class="form-group row">
                                <label class="col-sm-8 col-form-label">Allowance</label>
                                <select class="form-control" id="DDLAllowance">
                                    <option value="-1" selected="selected">Select Allowance</option>
                                </select>

                            </div>*@
                            <div class="form-group row">
                                <label class="col-sm-8 col-form-label">Select Allowance</label>
                                <select id="DDLAllowanceType" class="form-control">
                                   @*  <option value="-1" selected="selected">Select Allowance Type</option>*@
                                </select>
                            </div>
                        </div>

                        <div class="col-sm-12 col-md-2">
                            <div class="form-check">
