</div>


@section scripts{
    <!-- base:js -->
    <script src="~/Content/Assets/vendors/base/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- inject:js -->
    <script src="~/Content/Assets/js/off-canvas.js"></script>
    <script src="~/Content/Assets/js/hoverable-collapse.js"></script>
    <script src="~/Content/Assets/js/template.js"></script>
    <script src="~/Content/Assets/js/settings.js"></script>
    <!-- endinject -->
    <script src="~/Content/Assets/js/todolist.js"></script>



    <script src="~/Content/Assets/vendors/datatables.net/jquery.dataTables.js"></script>
    <script src="~/Content/Assets/vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js" integrity="sha512-AA1Bzp5Q0K1KanKKmvN/4d3IRKVlv9PYgwFPvm32nPO6QS8yH1HO7LbgB1pgiOxPtfeg5zEn2ba64MUcqJx6CA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js" integrity="sha512-AA1Bzp5Q0K1KanKKmvN/4d3IRKVlv9PYgwFPvm32nPO6QS8yH1HO7LbgB1pgiOxPtfeg5zEn2ba64MUcqJx6CA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/Content/Assets/vendors/select2/select2.min.js"></script>

    <script>

        $(document).ready(function () {
            $("#AddTask").show();
            $("#ChngName").show();
            $(".updateTask").hide();
            $(".txtUpdate").hide();
            LoadingGridDetails();
            GetAllowanceTypeDDL();
        });
        $('#DDLAllowanceType').select2({
            selectOnClose: true
        });


        function LoadingGridDetails() {

            $.ajax({
                type: "GET",
                contentType: "application/json; charset=utf-8",
                url: "/PayRoll/AllowanceList",
                success: onSuccessGridList,
                error: function (error) {

                },
                cache: false
            });
        }
        function onSuccessGridList(data) {
            $("#AllGridList").empty();
            $("#AllGridList").append("<table id='AlldatadetailTable' class='table u-table--v3 g-color-black'>");
            $("#AlldatadetailTable").empty();
            $("#AlldatadetailTable").append("<thead>" +
                "<tr class='ob_gC'>" +
                /*  "<th>ID</th>" +*/
                "<th>Name</th>" +
                "<th>AllowanceType</th>" +
                "<th class='last-td' style='width:35px'>Action</th> " +
                "</tr>" +
                "</thead>" +
                "<tbody id='values1'>");
            if (data.length > 0) {
                var val = '';

                for (var i = 0; i < data.length; i++) {
                    val = "<tr>" +
                        /*"<td class='first-td'>" + data[i].Id + "</td>" +*/
                        "<td>" + data[i].Name + "</td>" +
                        "<td>" + data[i].AllowanceTypeName + "</td>" +
                        "<td class='last-td'><a class='btn btn-default btn-sm' data-bs-toggle='tooltip' data-bs-placement='left' title='Edit' style='cursor: pointer;width: 35.725px' onclick='LoadingEditData(" + data[i].Id + ")' data-toggle='modal' data-target='#myModal'><i class='fa fas fa-pencil'></i></a><a class='btn  btn-sm'  data-bs-toggle='tooltip' data-bs-placement='right' title='Delete' style='cursor: pointer;' onclick = Delete(" + data[i].Id + ") > <i class='fa fa-trash'></i></a > "
                        // "<td class='last-td'><label class='form-check-inline u-check g-mr-20 mx-0 mb-0'> <input class='g-hidden-xs-up g-pos-abs g-top-0 g-right-0' id='btnEdit' onclick='LoadingEditData(" + data.data[i].pK_MetaDataID + ")' name = 'radGroup1_1' data-toggle='modal' data-target='#myModal'><i class='fa fa-pencil'></i></label ></td>" +
                        + "</tr></tbody>";


                    $('#values1').append(val);
                }
            }


            $('#AlldatadetailTable').dataTable({
                "bProcessing": true,
                "bPaginate": true,
                "sPaginationType": "full_numbers",
                "responsive": true,
                "ordering": true
            });

        }

        function LoadingEditData(ID) {
            Mode = "Update";
            $("#AddTask").hide();
            $(".updateTask").hide();
            $(".txtUpdate").hide();
            $("#divAddTask").append(" <button type='button' class='btn btn-primary create-ml my-auto ml-auto updateTask' id='updateTask' onclick='UpdateSkillsData(" + ID + ");'>Update</button>");
            $("#ChngName").hide();
            $("#ChangeTitle").append("<h4 class='modal-title txtUpdate' style='color: white' >Update Allowance</h4>");
            $.ajax({
                type: "GET",
                contentType: "application/json; charset=utf-8",
                url: "/PayRoll/EditAllowance/" + ID,
                success: onSuccessEditDetails,
                error: function (error) {
                    alert("error", error);
                },
                cache: false
            });

        }

        function onSuccessEditDetails(data) {
            $('#txtAllowanceName').val(data.Name);
            $('#DDLAllowanceType').val(data.FK_AllowanceTypeId).select2();
            $("#Activechk").prop('checked', data.IsActive);
        }

        function SaveData() {

            var AllowanceName = $('#txtAllowanceName').val();
            var AllowanceType = $("#DDLAllowanceType").val();
            var Active = $('#Activechk').is(":checked");


            if (AllowanceName == null || AllowanceName == 'string' || !AllowanceName.trim()) {

                Swal.fire({
                    icon: 'warning',
                    dangerMode: true,
                    text: 'Please Fill Allowance Name!'
                });
                return false;
            }


            //if (AllowanceType == null || AllowanceType == 'string' || !AllowanceType.trim()) {

            //    Swal.fire({
            //        icon: 'warning',
            //        dangerMode: true,
            //        text: 'Please Fill Allowance Type !'
            //    });
            //    return false;
            //}


            var Data = JSON.stringify(
                {
                    FK_AllowanceTypeId: AllowanceType,
                    Name: AllowanceName,
                    IsActive: Active
                });
            $.ajax({
                type: "POST",
                data: Data,
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                url: "/PayRoll/AddAllowance",
                success: onSuccessAddManagement,
                error: function (error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Something went wrong!',
                    });
                },
                cache: false
            });

        }

        function onSuccessAddManagement(data) {
            Swal.fire({
                icon: 'info',
                title: 'Info',
                text: 'Your work has been saved.',
            }).then(function () {
                location.reload(true);
            });
            Mode = "";
            clearfields();
            LoadingGridDetails();

        }

        function UpdateSkillsData(ID) {
            Mode = "Update";
            var AllowanceType = $("#DDLAllowanceType").val();
            var AllowanceName = $('#txtAllowanceName').val();
            var Active = $('#Activechk').is(":checked");
            var Data = JSON.stringify(
                {
                    Id: ID,
                    FK_AllowanceTypeId: AllowanceType,
                    Name: AllowanceName,
                    IsActive: Active
                });
            /* $("#myModal").modal('hide')*/
            $.ajax({
                type: "POST",
                data: Data,
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                url: "/PayRoll/UpdateAllowance",
                success: onSuccessUpdateManagement,
                error: function (error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Something went wrong!',
                    });
                },
                cache: false,
            });
        }
        function onSuccessUpdateManagement(data) {
            Swal.fire({
                icon: 'info',
                title: 'Info',
                text: 'Your work has been Updated.',
            }).then(function () {
                location.reload(true);
            });

            Mode = "";
            clearfields();
            LoadingGridDetails();

        }


        function Delete(ID) {
            if (confirm('Are you sure to Delete this record ?')) {

                $.ajax({
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    url: "/PayRoll/DeleteAllowance/" + ID,
                    success: function (data) {

                        LoadingGridDetails();

                    }

                });
            }
        }

        function GetAllowanceTypeDDL() {

            $.ajax({
                type: "GET",
                contentType: "application/json; charset=utf-8",
                url: "/PayRoll/AllowanceTypeList",
                success: function (data, status) {
                    if (data != "") {

                        $('#DDLAllowanceType').empty();
                        $('#DDLAllowanceType').append('<option value="-1" selected disabled>Select Allowance Type</option>');
                        $.each(data, function (i, tweet) {
                            $('#DDLAllowanceType').append('<option value="' + data[i].Id + '">' + data[i].Name + '</option>');

                        });

                    }

                },
                error: function (error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Something went wrong!',
                    });
                },
                cache: false,

            });
        }

        function clearfields() {
            $(".updateTask").hide();
            $(".txtUpdate").hide();
            $("#AddTask").show();
            $("#ChngName").show();

            $("#DDLAllowanceType").val("");
            $('#txtAllowanceName').val("");
        }

    </script>
}


