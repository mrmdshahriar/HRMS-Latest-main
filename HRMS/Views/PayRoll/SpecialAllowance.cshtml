        function SaveData() {
            debugger
            var PayRollMonth = $("#PayRollMonth").val();
            var Amount = $("#Amount").val();
            var EmployeeId = $('#EmployeeId').val();
            var AllowanceType = $('#AllowanceType').val();
             
            var Effect = $('#Effect').val();
            var Active = $('#Activechk').is(":checked");
            if (PayRollMonth == null || PayRollMonth == 'string' || !PayRollMonth.trim()) {

                Swal.fire({
                    icon: 'warning',
                    dangerMode: true,
                    text: 'Please Add valid value!'
                });
                return false;
            }
            if (EmployeeId == null || EmployeeId == -1 || EmployeeId == "") {
                Swal.fire({
                    icon: 'warning',
                    text: 'Please Select EmployeeId!'
                });
                return false;
            }

            if (AllowanceType == null || AllowanceType == -1 || AllowanceType == "") {
                Swal.fire({
                    icon: 'warning',
                    text: 'Please Select AllowanceType!'
                });
                return false;
            }

            var Data = JSON.stringify(
                {
                    EmployeeId: EmployeeId,
                    AllowanceType: AllowanceType,
                    Amount: Amount,
                    PayRollMonth: PayRollMonth,
                    Effect: Effect,
                    Active: Active
                });
            $.ajax({
                type: "POST",
                data: Data,
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                url: "/PayRoll/AddSpecialAllowance",
                success: onSuccessAddManagement,
                error: function (error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Something went wrong to Insert new Record!',
                    });
                },
                cache: false
            });

        }

