    <script>

        $(document).ready(function () {
            $("#AddTask").show();
            $(".updateTask").hide();
            LoadingStateDetails();
            GetCountryDDL();
            $("#ChngName").show();
            $(".txtUpdate").hide();


        });

        $('#DDLCountry').select2({
            selectOnClose: true
        });

        function LoadingStateDetails() {

            $.ajax({
                type: "GET",
                contentType: "application/json; charset=utf-8",
                url: "/Master/GetStateList",
                success: onSuccessCountryDetails,
                error: function (error) {

                },
                cache: false
            });
        }
        function onSuccessCountryDetails(data) {
            $("#AllSateList").empty();
            $("#AllSateList").append("<table id='AllSatedatadetailTable' class='table u-table--v3 g-color-black'>");
            $("#AllSatedatadetailTable").empty();
            $("#AllSatedatadetailTable").append("<thead>" +
                "<tr class='ob_gC'>" +
                /*"<th>ID</th>" +*/
                "<th>Name</th>" +
                "<th>Country Name</th>" +
                "<th class='last-td' style='width:35px'>Action</th> " +
                "</tr>" +
                "</thead>" +
                "<tbody id='values1'>");
            if (data.length > 0) {
                var val = '';

                for (var i = 0; i < data.length; i++) {
                    if (data[i].Active == true) {
                        val = "<tr>" +
                            /* "<td class='first-td'>" + data[i].Id + "</td>" +*/
                            "<td>" + data[i].Name + "</td>" +
                            "<td>" + data[i].CountryName + "</td>" +
                            "<td class='last-td'><a class='btn btn-default btn-sm' title='Edit' style='cursor: pointer;' onclick='LoadingEditData(" + data[i].Id + ")' data-toggle='modal' data-target='#StateModal'><i class='fa fas fa-pencil'></i></a><a class='btn  btn-sm' title='Delete' style='cursor: pointer;' onclick = Delete(" + data[i].Id + ") > <i class='fa fa-trash'></i></a > "
                            // "<td class='last-td'><label class='form-check-inline u-check g-mr-20 mx-0 mb-0'> <input class='g-hidden-xs-up g-pos-abs g-top-0 g-right-0' id='btnEdit' onclick='LoadingEditData(" + data.data[i].pK_MetaDataID + ")' name = 'radGroup1_1' data-toggle='modal' data-target='#myModal'><i class='fa fa-pencil'></i></label ></td>" +
                            + "</tr></tbody>";


                        $('#values1').append(val);
                    }
                }
            }


            $('#AllSatedatadetailTable').dataTable({
                "bProcessing": true,
                "bPaginate": true,
                "sPaginationType": "full_numbers",
                "responsive": true,
                "ordering": true
            });

        }

        function LoadingEditData(ID) {
            Mode = "Update";
            $("#AddTask").hide();
            $(".updateTask").hide();
            $("#ChngName").hide();
            $("#ChangeTitle").append("<h4 class='modal-title txtUpdate' style='color: white' >Update State</h4>");
            $("#divAddTask").append(" <button type='button' class='btn btn-inverse-primary  my-auto ml-auto updateTask' id='updateTask' onclick='UpdateState(" + ID + ");'>Update</button>");

            $.ajax({
                type: "GET",
                contentType: "application/json; charset=utf-8",
                url: "/Master/EditState/" + ID,
                success: onSuccessEditDetails,
                error: function (error) {
                    alert("error", error);
                },
                cache: false
            });

        }

        function onSuccessEditDetails(data) {

            $('#txtStateName').val(data.Name);
            $('#DDLCountry').val(data.CountryId).select2();
            $("#Activechk").prop('checked', data.Active);
        }

        function SaveData() {
            var StateName = $("#txtStateName").val();
            var CountryId = $('#DDLCountry').val();
            var Active = $('#Activechk').is(":checked");
            if (StateName == null || StateName == 'string' || !StateName.trim()) {

                Swal.fire({
                    icon: 'warning',
                    dangerMode: true,
                    text: 'Please Fill State Name!'
                });
                return false;
            }
            if (CountryId == null || CountryId == -1 || CountryId == "") {
                Swal.fire({
                    icon: 'warning',
                    text: 'Please Select Country!'
                });
                return false;
            }

            var Data = JSON.stringify(
                {
                    Name: StateName,
                    CountryId: CountryId,
                    Active: Active
                });
            $.ajax({
                type: "POST",
                data: Data,
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                url: "/Master/AddState",
                success: onSuccessAddManagement,
                error: function (error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Something went wrong to Insert new State!',
                    });
                },
                cache: false
            });

        }

        function onSuccessAddManagement(data) {
            if (data.success == true) {
                Swal.fire({
                    icon: 'info',
                    title: 'Info',
                    text: 'Your work has been saved.',
                }).then(function () {
                    location.reload(true);
                });
                Mode = "";
                clearfields();
                LoadingStateDetails();
            } else {
                Swal.fire({
                    icon: 'info',
                    title: 'Info',
                    text: data.message,
                }).then(function () {
                    location.reload(true);
                });
                Mode = "";
                clearfields();
                LoadingStateDetails();
            }

        }

        function UpdateState(ID) {
            Mode = "Update";
            var StateName = $("#txtStateName").val();
            var CountryId = $('#DDLCountry').val();
            var Active = $('#Activechk').is(":checked");

            var Data = JSON.stringify(
                {
                    Id: ID,
                    Name: StateName,
                    CountryId: CountryId,
                    Active: Active

                });
            /* $("#CountryModal").modal('hide')*/
            $.ajax({
                type: "POST",
                data: Data,
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                url: "/Master/UpdateState",
                success: onSuccessUpdateManagement,
                error: function (error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Something went wrong to Insert new State!',
                    });
                },
                cache: false,
            });
        }
        function onSuccessUpdateManagement(data) {
            Swal.fire({
                icon: 'info',
                title: 'Info',
                text: 'Your work has been Updated.',
            }).then(function () {
                location.reload(true);
            });
            Mode = "";
            clearfields();
            LoadingStateDetails();

        }


        function Delete(ID) {
            if (confirm('Are you sure to Delete this record ?')) {

                $.ajax({
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    url: "/Master/DeleteState/" + ID,
                    success: function (data) {

                        LoadingStateDetails();

                    }

                });
            }
        }

        function GetCountryDDL() {

            $.ajax({
                type: "GET",
                contentType: "application/json; charset=utf-8",
                url: "/Master/GetCountryList",
                success: function (data, status) {
                    debugger;
                    if (data != "") {

                        $('#DDLCountry').empty();
                        $('#DDLCountry').append('<option value="-1" selected disabled>Select Country</option>');
                        $.each(data, function (i, tweet) {
                            $('#DDLCountry').append('<option value="' + data[i].Id + '">' + data[i].Name + '</option>');

                        });

                    }

                },
                error: function (error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Something went wrong!',
                    });
                },
                cache: false,

            });
        }

        function clearfields() {
            $(".updateTask").hide();
            $("#AddTask").show();
            $("#txtStateName").val("");
            $("#DDLCountry").val("-1").select2();
            $("#ChngName").show();
            $(".txtUpdate").hide();

        }

    </script>
